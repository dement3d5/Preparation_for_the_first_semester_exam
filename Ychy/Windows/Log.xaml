<Window x:Class="Ychy.Windows.Log"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ychy.Windows"
        mc:Ignorable="d"
        Title="Log" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="81*"/>
            <ColumnDefinition Width="282*"/>
            <ColumnDefinition Width="37*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="117*"/>
            <RowDefinition Height="96*"/>
            <RowDefinition Height="97*"/>
            <RowDefinition Height="124*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="txt_login" Margin="183,19,18,3" FontSize="24" Grid.Column="1" Grid.Row="1"/>
        <TextBox x:Name="txt_password"  Margin="183,2,18,14" FontSize="24" Grid.Row="2" Grid.Column="1"/>
        <Label Content="Пароль" Margin="45,96,417,0" FontSize="24" Grid.Row="1" Grid.Column="1" Grid.RowSpan="2"/>
        <Label Content="Логин" Margin="45,117,398,0" FontSize="24" Grid.Column="1" Grid.RowSpan="2"/>
        <Button Content="Войти" Margin="45,6,64,46" FontSize="24" Grid.Row="3" Grid.Column="1" Click="Button_Click"/>
    </Grid>
</Window>
